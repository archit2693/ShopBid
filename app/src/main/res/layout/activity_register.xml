<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    tools:context=".Activities.RegisterActivity"
    android:background="#e8e8e8"
    >


    <ProgressBar
        android:id="@+id/register_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/create_new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20sp"
        android:text="Create your new account"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@+id/create_new_account"
        android:layout_marginBottom="30sp"
        android:src="@drawable/robot"
        android:padding="8sp"
        android:layout_centerHorizontal="true"
        android:onClick="picture_select"
        android:background="@drawable/profilephoto"/>



    <EditText
        android:layout_margin="5sp"
        android:layout_below="@+id/profile_photo"
        android:hint="Name"
        android:padding="10sp"
        android:background="@drawable/primary_color_btn"
        android:id="@+id/name_signup"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:textSize="10sp"
        android:textColor="#000"/>

    <EditText
        android:layout_margin="5sp"
        android:hint="Email"
        android:padding="10sp"
        android:background="@drawable/primary_color_btn"
        android:id="@+id/email_signup"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:textSize="10sp"
        android:layout_below="@+id/name_signup"
        android:textColor="#000"/>

    <EditText
        android:layout_margin="5sp"
        android:hint="Password"
        android:padding="10sp"
        android:background="@drawable/primary_color_btn"
        android:id="@+id/pass_signup"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/email_signup"
        android:textColor="#000"
        android:textSize="10sp"/>
    <Button
        android:background="@drawable/input_background"
        android:id="@+id/create_my_account"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignStart="@+id/back_to_login"
        android:layout_below="@+id/pass_signup"
        android:layout_marginTop="40dp"
        android:onClick="start_register"
        android:text="Create a new account"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"/>

    <Button
        android:background="@drawable/primary_color_btn"
        android:id="@+id/back_to_login"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/create_my_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Go to login"
        android:onClick="back_login"
        android:textSize="12sp"/>




</RelativeLayout>

