<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar2">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff"
        android:layout_below="@+id/toolbar2"
        android:src="@drawable/pinkgirl"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider"
        android:paddingBottom="55dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slider"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:text="@string/ItemName"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/text1"/>

    <EditText
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/email_etxt_bkgrnd"
        android:drawableLeft="@drawable/ic_airplay_black_24dp"
        android:drawablePadding="20dp"
        android:hint="Wrist Watch"
        android:inputType="none"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:text="@string/bid_value"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/item"
        android:id="@+id/text2"/>

    <EditText
        android:id="@+id/bidvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/email_etxt_bkgrnd"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:drawablePadding="20dp"
        android:hint="$56.0"
        android:inputType="text"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:text="@string/description"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/bidvalue"
        android:id="@+id/text3"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/email_etxt_bkgrnd"
        android:drawablePadding="20dp"
        android:gravity="top|left"
        android:hint="It is the worst watch."
        android:inputType="textMultiLine"
        android:lines="6"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:textSize="12dp"
        android:layout_below="@+id/text3"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="15dp"
        android:id="@+id/spinner"
        android:layout_marginBottom="55dp"
        android:background="@drawable/email_etxt_bkgrnd"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorPrimary"
        >

    </android.support.v7.widget.AppCompatSpinner>

    </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Add item"
        android:textColor="#fff"
        android:textSize="15sp"/>


</RelativeLayout>